{# src/SGT/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "SGTCoreBundle::layout.html.twig" %}

{% block body %}
  {% if error %}
    <div class="alert alert-danger">{{ error.message }}</div>
  {% endif %}

  {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
  <fieldset id="acceuil">
    <legend>Connection</legend>
    <table>
          <form action="{{ path('login_check') }}" method="post">
            <tr>
              <td><label for="username">Login :</label></td>
              <td><input type="text" id="username" name="_username" value="{{ last_username }}" maxlength="30"/></td>
            </tr>
            <tr>
              <td><label for="password">Mot de passe :</label></td>
              <td><input type="password" id="password" name="_password" maxlength="30"/></td>
            </tr>
            <tr>
              <td colspan="2"><input type="submit" value="Connexion" id="envoyer"/></td>
            </tr>
          </form>
      </table>
  </fieldset>

{% endblock %}